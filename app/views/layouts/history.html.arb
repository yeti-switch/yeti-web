# frozen_string_literal: true

panel 'History' do
  table_for assigns[:versions] do
    column :id do |v|
      link_to v.id, audit_log_item_path(v.id)
    end
    column :item do |v|
      link_to v.item.decorate.display_name, smart_url_for(v.item, version: v.id)
    end
    column :event
    column :created_at
    column :txid
    column 'Who ID', &:whodunnit
    column :who do |v|
      whodunit_link(v.whodunnit)
    end
    column :ip
  end
end
